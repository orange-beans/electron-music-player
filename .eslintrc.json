{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "quotes": [1, "single"],
    "semi": [2,"always"],
    "max-len": [2, 100],
    "eqeqeq": [2, "smart"],
    "space-in-parens": [2, "never"],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [0, "always"],
    "comma-dangle": [2, "always-multiline"],
    "no-console": 0,
    "no-unused-vars": 1,
    "no-loop-func": 2
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true,
    "browser": true
  },
  "root": true,
  "extends": "eslint:recommended"
}
